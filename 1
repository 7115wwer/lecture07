class  ComplexNumber :    # Основной цикл
    def  __init__ ( self , a , b , * args ):
        я . а  =  а
        я . б  =  б
        я . с  =  'а + Ь * я'
    def  __add__ ( себя , другое ):
        print ( f'Где сумма c1 и c2 равна: ' )
        return  f'c = { self . а  +  другое . а } + { сам . б  +  прочее . б } * я '
    def  __mul__ ( я , другой ):
        print ( f'Где произведение c1 и c2 равно: ' )
        return  f'c = { self . a  *  другое . a  - ( self . b  *  other . b ) } + { self . б  *  прочее . а } * я '
    def  __str__ ( сам ):
        return  f'c = { self . а } + { сам . б } * я '
c_1  =  Комплексное число ( 1 , - 2 )
c_2  =  Комплексное число ( 3 , 4 )
печать ( c_1 )
печать ( c_1  +  c_2 )
печать ( c_1  *  c_2 )
