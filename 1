class  Операция :   # Задаём базовые операции над числами
    def  plus ( self , x , y ):
        печать ( x  +  y )
    def  минус ( self , x , y ):
        печать ( x  -  y )
    def  умной ( self , x , y ):
        печать ( х  *  у )
    def  delenie ( self , x , y ):
        печать ( х  /  у )
    def  модуль ( self , x , y ):
        печать ( абс ( 7  +  8j ))
    def  stepen ( self , x , y ):
        печать ( pow ( x  +  y , 2 ))
obj1  =  Operation ()    # Задаем значения x и y
